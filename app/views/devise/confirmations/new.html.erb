<div class="form-cl">
<h2 class="text-center">Resend confirmation instructions</h2>

<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>


  	<%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %>

    <%= f.button :submit, "Resend confirmation instructions", class: "btn btn-primary btn-block"  %>
<br>
<%= render "devise/shared/links" %>
<% end %>


</div>