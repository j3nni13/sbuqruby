<div align="center">
  <h1>Send us a message</h1>

  <%= simple_form_for(@contact, html: {class: "form-listings"}) do |f| %>
    <%= f.input :name, :required => true, label: false, placeholder: "Name", input_html: {class: "form-control"} %>
    <%= f.input :email, :required => true, label: false, placeholder: "E-mail", input_html: {class: "form-control"} %>
    <%= f.input :topic, :required => true, label: false, placeholder: "Subject", input_html: {class: "form-control"} %>
    <%= f.input :message, :as => :text, :required => true, label: false, placeholder: "Message", input_html: {class: "form-control", rows: 5} %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>